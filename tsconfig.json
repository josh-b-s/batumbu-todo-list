  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react",
    "moduleResolution": "bundler",
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2017"
    ]
  }
}
